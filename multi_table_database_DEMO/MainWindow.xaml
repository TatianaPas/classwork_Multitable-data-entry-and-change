<Window x:Class="multi_table_database_DEMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multi_table_database_DEMO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,355">
            <MenuItem Name="stockManagementMenu" Header="Stock Management" Background="Yellow" Height="64" Width="190" FontSize="18">
                <MenuItem x:Name="addBookmenu" Header="add book" >
                    <MenuItem Name="newBookmenu" Header="new book" Click="addBookmenu_Click" />
                    <MenuItem Name="existentBookmenu" Header="order existing book" Click="newBookmenu_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel x:Name="centralPanel" Margin="10,84,10,10"></StackPanel>

    </Grid>
</Window>
